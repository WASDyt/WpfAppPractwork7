<Page x:Class="WpfAppPractwork1.Pages.PagePW6"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPractwork1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePW6">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ListBox Margin="10"
                 Name="lstInput">
            
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Список из файла"
                    Name="btnListFromFile"
                    Style="{StaticResource StyleSolveButton}"
                    Click="btnListFromFile_Click"/>
            <Button Content="Результат"
                    Name="btnRezult"
                    Style="{StaticResource StyleSolveButton}"
                    Click="btnRezult_Click"/>
            <TextBlock Name="txbRezult" 
                       Style="{StaticResource StyleTextBlock}"/>
        </StackPanel>
    </Grid>
</Page>
